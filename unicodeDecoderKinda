#include <string>
#include <iomanip>
#include <fstream>
#include <iostream>
#include <stdint.h>

using namespace std;

void print_characters(char const* uNum)
{
	cout << showbase << hex;
	for (char const* pc = uNum; *pc; ++pc) {
		if (*pc & 0x80)
			cout << (*pc & 0xff);
		else
			cout << *pc;
		cout << ' ';
	}
	cout << endl;
}

int main()
{
	char const* test = "ab\xef\xbb\xbfhu";
	print_characters(test);
	system("pause");

	return 0;
}
